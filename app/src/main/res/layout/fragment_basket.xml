<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.BasketFragment"
    android:background="#E8E3E3"
    >

    <View
        android:id="@+id/emptyBasketView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E3E3"
        android:elevation="5dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/emptyBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E8E3E3"
        android:elevation="5dp"
        android:text="Sepetiniz BoÅŸ"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <View
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/basketResView"
        android:layout_marginBottom="-20dp"
        />

    <ImageView
        android:id="@+id/basketResView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/basketResName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/basketResView"
        app:layout_constraintTop_toTopOf="@id/basketResView"
        app:layout_constraintBottom_toBottomOf="@id/basketResView"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22sp"
        />

    <View
        android:id="@+id/panel2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panel"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/basketFoodView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/panel2"
        app:layout_constraintTop_toTopOf="@id/panel2"
        app:layout_constraintBottom_toBottomOf="@id/panel2"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/basketFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/basketFoodView"
        app:layout_constraintTop_toTopOf="@id/basketFoodView"
        app:layout_constraintBottom_toBottomOf="@id/basketFoodView"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/point"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@drawable/point_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/basketFoodView"
        app:layout_constraintBottom_toBottomOf="@id/basketFoodView"
        android:layout_marginRight="40dp"
        />

    <TextView
        android:id="@+id/adet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/point"
        app:layout_constraintTop_toTopOf="@id/point"
        app:layout_constraintEnd_toEndOf="@id/point"
        app:layout_constraintBottom_toBottomOf="@id/point"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/sepetionaylaview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="-75dp"
        android:backgroundTint="#4CAF50"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sepeti Onayla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sepetionaylaview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginRight="80dp"
        />


    <TextView
        android:id="@+id/basketNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/panel2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:text=""
        android:hint="    Not Girmediniz!"
        />

    <TextView
        android:id="@+id/basketPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sepetionaylaview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="80dp"
        />










</androidx.constraintlayout.widget.ConstraintLayout>